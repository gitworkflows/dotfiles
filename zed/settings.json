{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "base_keymap": "VSCode",
  "buffer_font_features": {
    "calt": false
  },
  "buffer_font_size": 15,
  "code_actions_on_format": {
    "source.organizeImports.biome": true,
    "source.fixAll.biome": true
  },
  "confirm_quit": true,
  "ensure_final_newline_on_save": true,
  "experimental.theme_overrides": {
    "editor.active_line_number": "#D889FF",
    "editor.active_wrap_guide": "#FFFFFF30",
    "editor.line_number": "#FFFFFF66",
    "editor.wrap_guide": "#FFFFFF30"
  },
  "formatter": {
    "language_server": {
      "name": "biome"
    }
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": false
  },
  "project_panel": {
    "auto_fold_dirs": false
  },
  "relative_line_numbers": true,
  "remove_trailing_whitespace_on_save": true,
  "show_whitespaces": "all",
  "terminal": {
    "copy_on_select": true,
    "dock": "right",
    "toolbar": {
      "title": false
    }
  },
  "theme": {
    "mode": "system",
    "dark": "Ayu Dark",
    "light": "Ayu Light"
  },
  "ui_font_family": "Departure Mono",
  "ui_font_size": 15,
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank"
  },
  "wrap_guides": [80, 100, 120]
}
